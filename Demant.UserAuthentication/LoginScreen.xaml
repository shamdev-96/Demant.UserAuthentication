        <Label Grid.Column="1" Content="Password:" HorizontalAlignment="Left" Margin="131.667,228,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.895,-0.037" FontSize="18"/>
    </Grid>
</Page>
