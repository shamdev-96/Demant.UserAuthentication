      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demant.UserAuthentication"
      mc:Ignorable="d" 
      d:DesignHeight="469"
      x:Name="Login"
      Title="LoginScreen" Width="808.896">

    <Grid Margin="0,34,60.667,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="499*"/>
            <ColumnDefinition Width="236*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="1" Content="Login Page" HorizontalAlignment="Left" Margin="282.667,0,0,313" VerticalAlignment="Bottom" RenderTransformOrigin="-0.895,-0.037" FontSize="30"/>
